<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    
    <%= form_with model: @user do |f| %>
      <%= render partial: "layouts/error_notices", locals: {obj: @user} %>

      <%= f.text_field :name, placeholder: "Name"%>
      <%= f.file_field :profile_image, accept: "image/*", placeholder: "Image" %>
      <%= f.text_area :introduction, placeholder: "Introduction" %>
      <%= f.submit "Update User", class: "btn btn-secondary" %>
    <% end %>

    </div>
  </div>
</div>
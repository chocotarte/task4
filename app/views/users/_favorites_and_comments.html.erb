<td>
  <% if book.favorited_by?(current_user) %>
    <%= link_to book_favorites_path(book.id), method: :delete, style: "color: red" do %><i class="fa fa-heart", aria-hidden="true"></i><%= book.favorites.count %><% end %>
  <% else %>
    <%= link_to book_favorites_path(book.id), method: :post do %><i class="fa fa-heart", aria-hidden="true"></i><%= book.favorites.count %><% end %>
  <% end %>
</td>
<td> コメント数: <%= book.book_comments.count %> </td>
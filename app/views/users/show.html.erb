<div class="container px-5 px-sm-0">
  <%= render partial: "layouts/error_notices", locals: {obj: @newbook} %>

  
  <div class="row">
    
    <%= render partial: "info", locals: {user: @user, newbook: @newbook} %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% if not @books.blank? %>
            <% @books.each do |book| %>
              <tr>
                <td> <%= link_to user_path(book.user_id) do %><%= image_tag book.user.get_profile_image(80, 80) %><% end %> </td>
                <td> <%= link_to book_path(book.id) do %><%= book.title %><% end %> </td>
                <td> <%= book.body %> </td>
                
                <%= render partial: "favorites_and_comments", locals: {book: book} %>
              </tr>
            <% end %>
          <% end %>
        </tbody>
        
      </table>
      
    </div>
  </div>
</div>